{
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.js",
    "*.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
